.scale
	position relative
	margin-bottom 72px
	display block
	width 100%
	&__range
		&:after
			display block
			width 100%
			height 36px
			content ''
			background url(../images/scale.png) 0 -135px
			background-size cover

		input[type='range']
			-webkit-appearance none
			margin-top 20px
			width 100%
			height 0
			background-color transparent
			&::-webkit-slider-thumb
				-webkit-appearance none
				width 16px
				height 16px
				cursor pointer
				background url(../images/scale-mark.png) center center no-repeat
			&::-moz-range-thumb
				width 16px
				height 16px
				cursor pointer
				background url(../images/scale-mark.png) center center no-repeat
			&::-ms-thumb
				width 16px
				height 16px
				cursor pointer
				background url(../images/scale-mark.png) center center no-repeat
	&__items
		position relative
		margin-top 5px
		width 100%
		li
			position absolute
			max-width 170px
			font-family 'PT Sans', sans-serif
			font-size 13px
			font-weight 700
			&:nth-of-type(1)
				left 0
			&:nth-of-type(2)
				left 20%
			&:nth-of-type(3)
				left 50%
			&:nth-of-type(4)
				right 0